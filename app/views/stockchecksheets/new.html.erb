<h1>Record new stock check sheet</h1>

<!-- this is a HTML file with embedded Ruby code to create a form to capture user input -->
     
<%= form_for @sheet do |f| %>
        <div>
          <%= f.label :item_1 %> 
          <%= f.text_field :item1, placeholder: "enter item", autofocus: true %>
        </div>
        
        <div>
           <%= f.label :item_2 %> 
           <%= f.text_field :item2, placeholder: "enter item", autofocus: true %>
         </div>
         
         <div>
           <%= f.label :item_3 %> 
           <%= f.text_field :item3, placeholder: "enter item", autofocus: true %>
         </div>
         
         <div>
           <%= f.label :item_4 %> 
           <%= f.text_field :item4, placeholder: "enter item", autofocus: true %>
         </div>
         
         <div>
           <%= f.label :item_5 %> 
           <%= f.text_field :item5, placeholder: "enter item", autofocus: true %>
         </div>
         
          <div>
           <%= f.label :Machine_ID %> 
           <%= f.text_field :vendingmachine_id, placeholder: "enter machine ID", autofocus: true %>
         </div>
         
        <div>
          <!-- Asking confirmation from user for SFR -->
          <%= f.submit :onclick =>"return confirm('Sure')", class: "btn btn-primary btn-lg" %>
        </div>
        
      
    <% end %>